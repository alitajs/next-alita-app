{
  "name": "nextAlitaApp",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "alita dev",
    "start-server": "node server.js",
    "build": "alita build",
    "cordova-init": "alita cordova --init",
    "cordova-add-ios": "alita cordova --ios",
    "cordova-add-android": "alita cordova --android",
    "start-ios": "alita dev",
    "build-ios": "alita build",
    "start-android": "cross-env CORDOVA=android alita dev",
    "build-android": "cross-env CORDOVA=android alita build",
    "lint": "npm run lint:js && npm run lint:style && npm run lint:prettier",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --ext .ts,.tsx ",
    "lint:fix": "eslint --fix --cache --ext .ts,.tsx --format=pretty ./src && npm run lint:style",
    "lint:js": "eslint --cache --ext .ts,.tsx --format=pretty ./src",
    "lint:prettier": "prettier --check \"**/*\" --end-of-line auto",
    "lint:style": "stylelint --fix \"src/**/*.less\" --syntax less",
    "prettier": "prettier -c --write \"**/*\""
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@alita/react": "^0.1.0",
    "@alitajs/dform": "3.0.0-alpha.1",
    "@alitajs/list-view": "1.0.7",
    "alita": "^2.8.18"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "**/*.less": "stylelint --syntax less",
    "**/*.{ts,.tsx}": "npm run lint-staged:js",
    "**/*.{tsx,json,jsx,less}": [
      "npm run prettier",
      "git add"
    ]
  },
  "devDependencies": {
    "@koa/router": "^10.1.1",
    "@types/express": "^4.17.2",
    "@umijs/fabric": "2.0.6",
    "chalk": "^3.0.0",
    "concurrently": "^6.2.1",
    "cross-env": "^6.0.3",
    "eslint": "6.8.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "express": "^4.17.1",
    "got": "^11.5.0",
    "http-proxy-middleware": "^1.0.5",
    "koa": "^2.13.0",
    "koa-body": "^4.2.0",
    "koa-compress": "^5.0.1",
    "koa-mount": "^4.0.0",
    "koa-static": "^5.0.0",
    "koa-websocket": "^6.0.0",
    "koa2-proxy-middleware": "^0.0.4",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.2",
    "stylelint": "^12.0.1",
    "typescript": "^4.3.5",
    "yorkie": "^2.0.0"
  },
  "create-umi": {
    "ignore": [
      "create-umi-ignore.js"
    ]
  }
}
